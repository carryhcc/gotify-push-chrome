{
  "name": "gotify-push-chrome",
  "version": "0.1.0",
  "description": "A lightweight Chrome extension to send notifications to Gotify",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint . --ext .js --max-warnings=0 || true",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
    "build": "node ./scripts/build.js",
    "build:dev": "node ./scripts/build.js --dev"
  },
  "devDependencies": {
    "esbuild": "^0.18.0",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.0.0",
    "prettier": "^2.0.0"
  }
}
