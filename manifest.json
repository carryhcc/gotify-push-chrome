{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.2",
  "description": "__MSG_extDesc__",
  "default_locale": "en",
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "options_page": "html/options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://*/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "http://*:*/*"
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}